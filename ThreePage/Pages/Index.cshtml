@page
@using Three.Models;
@using Three.Services;

@inject IDepartmentService departmentService

<div class="row">
    <div class="col-md-10 offset-md-2">
        <table class="table">
            <tr>
                <th>Name</th>
                <th>Location</th>
                <th>Employee Count</th>
                <th>Action</th>
            </tr>
            @Html.DisplayFor(x => x.Departments)
        </table>
    </div>
</div>

<div class="row">
    <div class="col-md-4">
        <a asp-page="Department/AddDepartment">Add</a>
    </div>
</div>


@await Component.InvokeAsync("CompanySummary", new { title = "部门列表页的汇总" })
<vc:company-summary title="部门列表页的汇总2"></vc:company-summary>




@functions{


    public IEnumerable<Three.Models.Department> Departments { get; set; }

    public async Task OnGetAsync()
    {
        Departments = await departmentService.GetAll();
    }



}